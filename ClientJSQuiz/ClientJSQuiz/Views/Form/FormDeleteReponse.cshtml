<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<div id="deleteReponse">
    <form id="formDeleteReponse">
        <label for="id_delete_reponse">Id de la réponse à supprimer</label><br>
        <input name="id_delete_reponse" id="id_delete_reponse" /><br><br />
        <button class="button btn btn-primary" onclick="deleteReponse()">Delete réponse</button>
    </form>
    
</div>
<script>
    function deleteReponse() {
        var id = document.getElementById("id_delete_reponse").value;
        var xhttp = new XMLHttpRequest();

        xhttp.onreadystatechange = function () {
            if (this.status == 200 || this.status == 204) {
                alert("Suppression Réponse Réussi");
            }
            else {
                alert("Réponse non existant");
            }
        }

        xhttp.open("DELETE", "https://localhost:44332/supprimerReponse/" + id, true);
        xhttp.setRequestHeader("ApiKey", "1111");
        xhttp.send();
    }
</script>