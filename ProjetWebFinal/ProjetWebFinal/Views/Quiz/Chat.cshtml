@model Joueur
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4">
            <input type="text" id="messageInput" />
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div id="joueurConnecte">
    @Model.nom_joueur
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<div>
    <h1>Ceci est une question choisi une reponse</h1>
    <form>
        <select id="reponse">
            <option value="1">1</option>
            <option value="2">2</option>
        </select>
        <div class="col-6">
            <input type="button" id="sendReponse" value="Envoyez reponse" />
        </div>
    </form>
</div>
<div style="display: none;">Succes</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>