@model ProjetWebFinal.Controllers.UtilisateurController;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quiz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
       <div class="form-group row justify-content-center">
           <h1>Bienvenue @ViewBag.joueur.nom_joueur </b></h1>
       </div>
       <div class="row justify-content-center">

           <a class="btn btn-primary" asp-area="" asp-controller="Quiz" asp-action="Index">Jouer</a>

       </div>
       <div>
           <div>
               <div class="form-group row justify-content-center">
                   <h2>Mes performances</h2>
               </div>
               <hr>
               <div>
                   <table>
                       <tr>
                           <th>Catégories</th>
                           <th>Scores</th>
                       </tr>
                       <tr>
                           <td>Science</td>
                           <td>@ViewBag.joueur.score_science</td>
                       </tr>
                       <tr>
                           <td>Histoire</td>
                           <td>@ViewBag.joueur.score_histoire</td>
                       </tr>
                       <tr>
                           <td>Sport</td>
                           <td>@ViewBag.joueur.score_sport</td>
                       </tr>
                       <tr>
                           <td>Art</td>
                           <td>@ViewBag.joueur.score_animaux</td>
                       </tr>
                       <tr>
                           <td>Geographie</td>
                           <td>@ViewBag.joueur.score_geo</td>
                       </tr>
                       <tr>
                           <td>Programmation</td>
                           <td>@ViewBag.joueur.score_programmation</td>
                       </tr>
                   </table>
               </div>
           </div>
       </div>
    </header>
</body>
</html>
