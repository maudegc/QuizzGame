<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:background="@drawable/bglogin"
        android:padding="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Connecter"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Se connecter"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BtnCreer" />

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="88dp"
            android:layout_height="116dp"
            app:layout_constraintBottom_toTopOf="@+id/NomUtilisateurInscription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Titre"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/MotDePasse2"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/border"
            android:hint="Confirmer Mdp"
            android:inputType="textPassword"
            android:paddingLeft="3pt"
            android:paddingTop="1pt"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/BtnCreer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MotDePasse1" />

        <EditText
            android:id="@+id/MotDePasse1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/border"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:paddingLeft="3pt"
            android:paddingTop="1pt"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/MotDePasse2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NomUtilisateurInscription" />

        <EditText
            android:id="@+id/NomUtilisateurInscription"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/border"
            android:hint="Nom d'utilisateur"
            android:paddingLeft="3pt"
            android:paddingTop="1pt"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/MotDePasse1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Logo" />

        <TextView
            android:id="@+id/Titre"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="Créer Un Compte"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/Logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <Button
            android:id="@+id/BtnCreer"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Créer Compte"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:backgroundTint="#EF3C56"
            app:layout_constraintBottom_toTopOf="@+id/Connecter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MotDePasse2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>