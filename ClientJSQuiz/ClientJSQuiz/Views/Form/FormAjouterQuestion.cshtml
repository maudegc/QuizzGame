<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<div id="ajoutQuestion" style="visibility: visible">
    <form id="formAjouterQuestion">
        <label for="id_bonne_reponse">Id de la bonne reponse</label><br>
        <input type="text" name="id_bonne_reponse" id="id_bonne_reponse" /><br>
        <label for="nom_question">Question</label><br>
        <input type="text" name="nom_question" id="nom_question" /><br>
        <label for="categorie">Catégorie</label><br>
        <input type="text" name="categorie" id="categorie" /><br /><br />
        <button class="button btn btn-primary" onclick="postQuestion()">Ajouter question</button>
    </form>

</div>
<script>
    function postQuestion() {
        const question = {
            id_bonne_reponse: document.getElementById("id_bonne_reponse").value,
            nom_question: document.getElementById("nom_question").value,
            categorie: document.getElementById("categorie").value
        }
        var xhttp = new XMLHttpRequest();

        xhttp.onreadystatechange = function () {
            if (this.status == 200 || this.status == 201) {
                alert("Question ajoutée");
            }
            else {
                alert("ERREUR");
            }
        }

        xhttp.open("POST", "https://localhost:44332/ajouterQuestion", true);
        xhttp.setRequestHeader("ApiKey", "1111");
        xhttp.setRequestHeader("Content-type", "application/json");
        xhttp.send(JSON.stringify(question));
    }
</script>


