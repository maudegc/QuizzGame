<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<div id="ajoutReponse">
    <form id="formAjouterReponse">
        <label for="id_question">Id de la question</label><br>
        <input type="text" name="id_question" id="id_question" /><br>
        <label for="nom_reponse">Réponse</label><br>
        <input type="text" name="nom_reponse" id="nom_reponse" /><br><br />
        <button class="button btn btn-primary" onclick="postReponse()">Ajouter réponse</button>
    </form>
   
</div>
<script>
    function postReponse() {
        const reponse = {
            id_question: document.getElementById("id_question").value,
            nom_reponse: document.getElementById("nom_reponse").value
        }
        var xhttp = new XMLHttpRequest();

        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && (this.status == 200 || this.status == 201)) {
                alert("Réponse ajoutée");
            }
            else {
                alert("ERREUR");
            }
        }

        xhttp.open("POST", "https://localhost:44332/ajouterReponse", true);
        xhttp.setRequestHeader("ApiKey", "1111");
        xhttp.setRequestHeader("Content-type", "application/json");
        xhttp.send(JSON.stringify(reponse));
    }
</script>